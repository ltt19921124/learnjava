package yichang;


public class ExceptionDemo {
	public static void main(String[] args){
		
		int[] arr = new int[3];
		arr = null;
		System.out.println(arr[2]);//角标越界
		sleep(-5);
		
	}
	
	public static void sleep(int time){
		if(time < 0) {
			//处理办法
			new Futime();//代表着时间为负的情况，这个对象中会包含着问题的名称，位置
			
		}
		if(time > 10000) {
			//处理办法
			new Bigtime();
		}
		System.out.println("shui..." + time);
	}
	
}

class Futime {
	
	
}

class Bigtime {
	
}









